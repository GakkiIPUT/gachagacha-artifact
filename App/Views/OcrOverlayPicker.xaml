<Window x:Class="Gacha.Views.OcrOverlayPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pick Region" WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="#66000000" Topmost="True"
        WindowStartupLocation="Manual" Left="0" Top="0" Width="{x:Static SystemParameters.VirtualScreenWidth}" Height="{x:Static SystemParameters.VirtualScreenHeight}"
        KeyDown="Window_KeyDown">
    <Grid Background="Transparent"
          MouseLeftButtonDown="Grid_MouseLeftButtonDown"
          MouseMove="Grid_MouseMove"
          MouseLeftButtonUp="Grid_MouseLeftButtonUp"
          Focusable="True">
        <Canvas x:Name="Stage">
            <Rectangle x:Name="Selection" Stroke="DeepSkyBlue" StrokeThickness="2" Fill="#2200BFFF" Visibility="Collapsed"/>
            <Border VerticalAlignment="Top" HorizontalAlignment="Left" Margin="12" Background="#80000000" Padding="8" CornerRadius="6"
                    IsHitTestVisible="False">
                <StackPanel>
                    <TextBlock x:Name="Hint" Foreground="White" Text="ドラッグで選択 / Escでキャンセル" />
                    <TextBlock x:Name="Info" Foreground="White" />
                </StackPanel>
            </Border>
        </Canvas>
    </Grid>
</Window>
