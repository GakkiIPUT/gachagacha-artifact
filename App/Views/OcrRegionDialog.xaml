<Window x:Class="Gacha.Views.OcrRegionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OCR領域設定" Width="360" Height="220"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="X:" VerticalAlignment="Center" Width="24"/>
            <TextBox x:Name="TbX" Width="80" Margin="4,0,16,0"/>
            <TextBlock Text="Y:" VerticalAlignment="Center" Width="24"/>
            <TextBox x:Name="TbY" Width="80" Margin="4,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="W:" VerticalAlignment="Center" Width="24"/>
            <TextBox x:Name="TbW" Width="80" Margin="4,0,16,0"/>
            <TextBlock Text="H:" VerticalAlignment="Center" Width="24"/>
            <TextBox x:Name="TbH" Width="80" Margin="4,0,0,0"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="※ゲームはウィンドウモード固定推奨。座標は実画面ピクセルです。" TextWrapping="Wrap" Foreground="#666"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="84" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="キャンセル" Width="84" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
