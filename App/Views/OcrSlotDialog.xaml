<Window x:Class="Gacha.Views.OcrSlotDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="部位を選択" Width="320" Height="180"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="この聖遺物の部位を選んでください"
                   FontWeight="Bold" Margin="0,0,0,8"/>

        <ComboBox x:Name="Cmb" Grid.Row="1" Height="32" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="84" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="スキップ" Width="84" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
